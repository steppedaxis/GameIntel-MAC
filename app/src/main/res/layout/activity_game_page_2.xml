<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundfinal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/page_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars[0]" />

        <android.support.v4.widget.Space
            android:layout_width="8dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caravan"
            android:gravity="center_horizontal"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="24sp"
            tools:text="TextView" />

        <ImageView
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            app:srcCompat="@drawable/linebetter" />

        <android.support.v4.widget.Space
            android:layout_width="8dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caravan"
            android:text="Genre:"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="24sp"
            tools:text="Genre:" />

        <ImageView
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            app:srcCompat="@drawable/linebetter" />

        <TextView
            android:id="@+id/page_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp"
            tools:text="TextView" />

        <android.support.v4.widget.Space
            android:layout_width="8dp"
            android:layout_height="30dp"  />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caravan"
            android:text="Sub Genres:"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="24sp"
            tools:text="Sub Genres:" />

        <ImageView
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            app:srcCompat="@drawable/linebetter" />

        <TextView
            android:id="@+id/page_subgenres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp"
            tools:text="TextView" />

        <android.support.v4.widget.Space
            android:layout_width="8dp"
            android:layout_height="30dp"  />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caravan"
            android:text="Description:"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="24sp"
            tools:text="Description:" />

        <ImageView
            android:id="@+id/line5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            app:srcCompat="@drawable/linebetter" />

        <TextView
            android:id="@+id/page_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp"
            tools:text="TextView" />

        <android.support.v4.widget.Space
            android:layout_width="8dp"
            android:layout_height="30dp"  />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caravan"
            android:text="Developer:"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="24sp"
            tools:text="Developer:" />

        <ImageView
            android:id="@+id/line8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            app:srcCompat="@drawable/linebetter" />

        <TextView
            android:id="@+id/page_developer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp"
            tools:text="TextView" />

        <android.support.v4.widget.Space
            android:layout_width="8dp"
            android:layout_height="30dp"  />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caravan"
            android:text="Publisher:"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="24sp"
            tools:text="Publisher:" />

        <ImageView
            android:id="@+id/line9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            app:srcCompat="@drawable/linebetter" />

        <TextView
            android:id="@+id/page_publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp"
            tools:text="TextView" />

        <android.support.v4.widget.Space
            android:layout_width="8dp"
            android:layout_height="30dp"  />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caravan"
            android:text="Series:"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="24sp"
            tools:text="Series:" />

        <ImageView
            android:id="@+id/line10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            app:srcCompat="@drawable/linebetter" />

        <TextView
            android:id="@+id/page_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp"
            tools:text="TextView" />

        <android.support.v4.widget.Space
            android:layout_width="8dp"
            android:layout_height="30dp"  />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caravan"
            android:text="Release Date:"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="24sp"
            tools:text="Release Date:" />

        <ImageView
            android:id="@+id/line11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            app:srcCompat="@drawable/linebetter" />

        <TextView
            android:id="@+id/page_release_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp"
            tools:text="TextView" />

        <android.support.v4.widget.Space
            android:layout_width="8dp"
            android:layout_height="30dp"  />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/caravan"
            android:text="Platforms:"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="24sp"
            tools:text="Platforms:" />

        <ImageView
            android:id="@+id/line12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            app:srcCompat="@drawable/linebetter" />

        <TextView
            android:id="@+id/page_platforms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp"
            tools:text="TextView" />
    </LinearLayout>
</ScrollView>