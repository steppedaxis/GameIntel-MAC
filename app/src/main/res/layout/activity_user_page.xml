<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundfinal"
    tools:context=".activities.UserPage">

    <Button
        android:id="@+id/userResetPass"
        android:layout_width="156dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/buttonshape"
        android:onClick="resetPasswordBtn"
        android:text="Change Password"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/userLogOff"
        android:layout_width="153dp"
        android:layout_height="42dp"
        android:background="@drawable/buttonshape"
        android:onClick="logOutButton"
        android:text="Log Out"
        app:layout_constraintEnd_toStartOf="@+id/userResetPass"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:text="Log Out" />

    <Button
        android:id="@+id/userLogOff2"
        android:layout_width="145dp"
        android:layout_height="43dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/buttonshape"
        android:onClick="addGameButton"
        android:text="Add Your Own Game"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:text="Add Your Own Game" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <TextView
        android:id="@+id/userUserName"
        android:layout_width="142dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:gravity="center|center_horizontal"
        android:text="TextView"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="98dp"
        android:layout_height="95dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/userUserName"
        app:srcCompat="@drawable/gamericon2"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="327dp"
        android:layout_height="335dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/user_Name"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:gravity="center|center_vertical"
            android:text="user_name"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:gravity="center|center_vertical"
            android:text="user_email"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/userAge"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:gravity="center"
            android:text="user_age"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/userBirthDate"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:gravity="center"
            android:text="user_date"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/userVerifyEmail"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:gravity="center|center_horizontal"
            android:text="email_verified"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="18sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>