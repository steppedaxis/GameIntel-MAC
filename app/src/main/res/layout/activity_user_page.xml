<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundfinal"
    tools:context=".activities.UserPage">


    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <TextView
        android:id="@+id/userUserName"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:fontFamily="@font/futura"
        android:gravity="center|center_horizontal"
        android:text="userpage_USERNAME"
        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/user_image"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        tools:srcCompat="@drawable/profilepic" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="412dp"
        android:layout_height="431dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_Name"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:fontFamily="@font/futura"
                android:gravity="center|center_vertical"
                android:text="user_name"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:fontFamily="@font/futura"
                android:gravity="center|center_vertical"
                android:text="user_email"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userAge"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:fontFamily="@font/futura"
                android:gravity="center"
                android:text="user_age"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userBirthDate"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:fontFamily="@font/futura"
                android:gravity="center"
                android:text="user_date"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userVerifyEmail"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:fontFamily="@font/futura"
                android:gravity="center|center_horizontal"
                android:text="email_verified"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/userFavorites"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:fontFamily="@font/futura"
                android:gravity="center|center_horizontal"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:textSize="18sp" />

            <android.support.v4.widget.Space
                android:layout_width="8dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/userLogOff2"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="@drawable/buttonshape"
                android:gravity="center"
                android:onClick="addGameButton"
                android:text="Add Your Own Game"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                tools:text="Add Your Own Game" />

            <android.support.v4.widget.Space
                android:layout_width="8dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/userResetPass"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:background="@drawable/buttonshape"
                android:onClick="resetPasswordBtn"
                android:text="Change Password"
                android:textColor="@color/common_google_signin_btn_text_dark_default" />

            <android.support.v4.widget.Space
                android:layout_width="8dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/userLogOff"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:background="@drawable/buttonshape"
                android:onClick="logOutButton"
                android:text="Log Out"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                tools:text="Log Out" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>