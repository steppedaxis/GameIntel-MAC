<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundfinal"
    tools:context=".activities.addGamePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura"
            android:gravity="center"
            android:text="Add Game To Library"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/add_game_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/add_game_developer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Developer"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/add_game_publisher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Publisher"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/add_game_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Description"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/add_game_release_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="ENTER RELEASE DATE" />

        <EditText
            android:id="@+id/add_game_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Series"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/editText10"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter Release Date"
            android:inputType="textPersonName"
            android:text="Select Sub Genres"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/radio1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/simulation_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Simulation" />

            <CheckBox
                android:id="@+id/fighting_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fighting" />

            <CheckBox
                android:id="@+id/adventure_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Adventure" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radio2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/survival_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Survival" />

            <CheckBox
                android:id="@+id/racing_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Racing" />

            <CheckBox
                android:id="@+id/fps_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="First Person Shooter" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/radio3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/action_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Action" />

            <CheckBox
                android:id="@+id/strategy_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Strategy" />

            <CheckBox
                android:id="@+id/rpg_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RPG" />
        </RadioGroup>

        <TextView
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter Release Date"
            android:inputType="textPersonName"
            android:text="Select Platforms"
            android:textSize="18sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent" >

            <CheckBox
                android:id="@+id/ps4_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Playstation 4" />

            <CheckBox
                android:id="@+id/pc_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PC" />

            <CheckBox
                android:id="@+id/ps3_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Playstation 3" />
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent" >

            <CheckBox
                android:id="@+id/xbox360_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="XBOX 360" />

            <CheckBox
                android:id="@+id/xboxone_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="XBOX ONE" />

            <CheckBox
                android:id="@+id/nintendoswitch_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nintendo Switch" />
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/add_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="addGameButton"
                android:text="Add Game" />
        </RadioGroup>

    </LinearLayout>
</ScrollView>